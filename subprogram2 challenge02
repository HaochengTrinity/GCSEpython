def menu():
    print("0 to exit")
    print("1 for timetables")
    print("2 for adding")

menu()

def timetable():
    number = int(input("enter a number between 1 and 12"))

def add():
    num1 = int(input("enter a number"))
    num2 = int(input("enter another number"))
    sum = num1 + num2
    print(sum)

choice = int(input("enter a number"))
